#include <stdio.h>
#include<stdlib.h>

int main()
{
    int n,req[100],initial,thm=0;
    printf("enter the number of request:");
    scanf("%d",&n);
    printf("enter the sequence:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&req[i]);
    }
    printf("enter the initial head position:");
    scanf("%d",&initial);
     printf("Sequence of disk head movement: ");
    for (int i = 0; i < n; i++) {
        printf("%d -> ", initial);
        thm = thm + abs(req[i] - initial);
        initial = req[i];
    }
   printf("%d\n", initial);
    printf("total headmovement=%d",thm);
    return 0;
}
